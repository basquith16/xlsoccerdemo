div.header_top
    if user
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= `Welcome ${user.name.split(' ')[0]}`
        span 
            a(href='/myaccount') My Account
        a.nav__el.nav__el--logout Log out
    
    else 
        span 
            a(href='/login') Login 
        span 
            a(href='/register') Register

